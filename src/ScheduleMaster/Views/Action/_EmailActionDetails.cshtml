        @Html.LabelFor(m => m.ActionConfiguration.SmtpEnableSSL, new {@class = "control-label col-sm-4"})
        <div class="col-sm-8">
            @Html.CheckBoxFor(m=>m.ActionConfiguration.SmtpEnableSSL)
