            <input type="text" id="@Html.IdFor(m => m.ActionConfiguration.SmtpHost)" name="@Html.NameFor(m => m.ActionConfiguration.SmtpHost)" value="@Model.ActionConfiguration.SmtpHost" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ActionConfiguration.SmtpPort, new {@class = "control-label col-sm-4"})
