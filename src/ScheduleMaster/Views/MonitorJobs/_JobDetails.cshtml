@model ScheduleMaster.Models.ViewModels.MonitorJobs.JobDetailsViewModel

<div class="form-horizontal">
    @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
    {
        <div class="alert alert-danger">
            <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            @Html.ValidationSummary(false, "Errors: ")
        </div>
    }

    @Html.HiddenFor(m => m.JobConfiguration.Id)
    @Html.HiddenFor(m => m.SearchTerm)
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.Name, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.Name)" name="@Html.NameFor(m => m.JobConfiguration.Name)" value="@Model.JobConfiguration.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.Description, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.Description)" name="@Html.NameFor(m => m.JobConfiguration.Description)" value="@Model.JobConfiguration.Description" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.SqsAccessKey, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.SqsAccessKey)" name="@Html.NameFor(m => m.JobConfiguration.SqsAccessKey)" value="@Model.JobConfiguration.SqsAccessKey" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.SqsSecretKey, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.SqsSecretKey)" name="@Html.NameFor(m => m.JobConfiguration.SqsSecretKey)" value="@Model.JobConfiguration.SqsSecretKey" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.SqsRegion, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.SqsRegion)" name="@Html.NameFor(m => m.JobConfiguration.SqsRegion)" value="@Model.JobConfiguration.SqsRegion" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.SqsQueueUrl, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.SqsQueueUrl)" name="@Html.NameFor(m => m.JobConfiguration.SqsQueueUrl)" value="@Model.JobConfiguration.SqsQueueUrl" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.LongPollingTimeSeconds, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.LongPollingTimeSeconds)" name="@Html.NameFor(m => m.JobConfiguration.LongPollingTimeSeconds)" value="@Model.JobConfiguration.LongPollingTimeSeconds" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.NumberOfDequeueMessages, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.NumberOfDequeueMessages)" name="@Html.NameFor(m => m.JobConfiguration.NumberOfDequeueMessages)" value="@Model.JobConfiguration.NumberOfDequeueMessages" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.CronExpression, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            <input type="text" id="@Html.IdFor(m => m.JobConfiguration.CronExpression)" name="@Html.NameFor(m => m.JobConfiguration.CronExpression)" value="@Model.JobConfiguration.CronExpression" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.DeleteMessageAfterSuccess, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            @Html.CheckBoxFor(m => m.JobConfiguration.DeleteMessageAfterSuccess)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobConfiguration.IsEnabled, new { @class = "control-label col-sm-4" })
        <div class="col-sm-8">
            @Html.CheckBoxFor(m => m.JobConfiguration.IsEnabled)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index", new { searchTerm = Model.SearchTerm })
</div>
